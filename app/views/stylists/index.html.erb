<h1>Listing stylists</h1>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Salon</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stylists.each do |stylist| %>
  <tr>
    <td><%= stylist.picture %></td>
    <td><%= stylist.name %></td>
    <td><%= stylist.salon %></td>
    <td><%= stylist.location %></td>
    <td><%= link_to 'Show', stylist %></td>
    <td><%= link_to 'Edit', edit_stylist_path(stylist) %></td>
    <td><%= link_to 'Destroy', stylist, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

